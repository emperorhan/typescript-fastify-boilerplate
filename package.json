{
    "name": "typescript-fastify-boilerplate",
    "version": "0.0.1",
    "description": "typescript-fastify-boilerplate",
    "license": "MIT",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "scripts": {
        "start": "npm run build && node -r ./tsconfig-paths-bootstrap.js dist/index.js",
        "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
        "pre-build": "rimraf ./dist",
        "build": "yarn run pre-build && tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "dev": "ts-node -r tsconfig-paths/register src/index.ts",
        "lint": "eslint --max-warnings=0 '{src,__tests__}/**/*.ts'",
        "lint:fix": "eslint --fix '{src,__tests__}/**/*.ts'",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register $(yarn bin jest) --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "release": "standard-version",
        "release:major": "standard-version -- --release-as major",
        "release:minor": "standard-version -- --release-as minor",
        "release:patch": "standard-version -- --release-as patch",
        "release:version": "standard-version -- --release-as",
        "prepare": "husky install",
        "pre-commit": "yarn build && yarn lint-staged",
        "prepare-commit-msg": "devmoji -e",
        "commit-msg": "npx --no-install commitlint --edit",
        "pre-push": "yarn test",
        "commit": "cz"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "fastify": "^3.20.1",
        "fastify-helmet": "^5.3.2",
        "fastify-plugin": "^3.0.0",
        "fastify-swagger": "^4.8.4",
        "got": "^11.8.2",
        "got-fetch": "^3.0.1",
        "node-schedule": "^2.0.0",
        "pino": "^6.11.3",
        "pino-pretty": "^5.1.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "tsconfig-paths": "^3.10.1",
        "typedi": "^0.10.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@types/got": "^9.6.12",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.4",
        "@types/node-schedule": "^1.3.2",
        "@types/pino": "^6.3.8",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "devmoji": "^2.3.0",
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-security": "^1.4.0",
        "git-branch-is": "^4.0.0",
        "git-format-staged": "^2.1.2",
        "http-status-codes": "^2.1.4",
        "husky": "^7.0.0",
        "jest": "^27.0.4",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.1",
        "standard-version": "^9.3.1",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4"
    }
}
